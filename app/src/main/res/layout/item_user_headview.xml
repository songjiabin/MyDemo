<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

    <FrameLayout
        android:id="@+id/user_headview_back_fl"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:scaleType="center"
            android:src="@drawable/title_back"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/user_headview_go_user_setting"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="16dp"
            android:layout_marginTop="9dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_userinfo_edit"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/user_headview_image_head"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/user_headview_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_headview_image_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="用户名"
        android:textColor="#FF333333"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/user_headview_user_follow_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_headview_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_headview_user_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝 6"
            android:textColor="#FF333333"
            android:textSize="12sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:background="#FF333333"/>

        <TextView
            android:id="@+id/user_headview_user_follows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注 52"
            android:textColor="#FF333333"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/user_headview_user_intro"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_headview_user_follow_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="最权威的精品生活引领者，文艺癌专科医院，治好的也不肯出院。"
        android:textColor="#FF333333"
        android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/user_headview_user_intro"
        android:background="#f7f7f7"/>
</RelativeLayout>