<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_bank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="银行卡"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/tv_bank_title"
            android:text="请选择银行"/>

    </RelativeLayout>

    <com.example.mydemo.view.BankPickerView
        android:id="@+id/bank_picker_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.mydemo.view.BankPickerView>




    <RelativeLayout
        android:id="@+id/rl_bank_select"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_bank_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="银行卡"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_bank_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/tv_bank_title1"
            android:text="请选择银行" />

    </RelativeLayout>



</LinearLayout>